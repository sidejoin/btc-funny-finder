{
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
